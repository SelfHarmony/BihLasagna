<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/a123">

    <TextView
        android:id="@+id/tseries_text"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="220dp"
        android:textColor="@android:color/white"
        android:layout_width="160dp"
        android:textSize="32sp"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="220dp" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/pewds_text"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="30dp"
        android:layout_width="160dp"
        android:textSize="32sp"
        android:layout_height="wrap_content"
        android:textAlignment="center" />
    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/text_sub_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="32sp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        />
    <Button
        android:id="@+id/play_bich_lasagna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bless your ears"
        android:layout_gravity="center"
        android:layout_marginTop="140dp" />
    <Button
        android:id="@+id/pause_bich_lasagna"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="| |"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"/>
    <Button
        android:id="@+id/button_lasagna"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:text="Serve Lasagna"/>
    <Button
        android:id="@+id/sub_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:text="DO YOUR PART"/>


</FrameLayout>